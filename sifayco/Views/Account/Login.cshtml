@model sifayco.Models.LoginModel
<section id="loginForm">
    <div class="login">
        <div>
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>
            <div class="login_wrapper">
                <div class="animate form login_form">
                    <section class="login_content">
                        @using (Html.BeginForm(new {ViewBag.ReturnUrl}))
                        {
                            @Html.AntiForgeryToken()
                            <h1>Inicio de Sesión</h1>
                            <div >
                                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control",placeholder ="Nombre de Usuario"})
                                @*@Html.ValidationMessageFor(m => m.UserName, string.Empty,new {@class = "error"})*@
                            </div>
                            <div>
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control",placeholder ="Contraseña"})
                                @*@Html.ValidationMessageFor(m => m.Password, string.Empty,new {@class = "error"})*@
                            </div>
                            <div>
                                <input class="btn btn-default submit" type="submit" value="Iniciar sesión" />
                                <a class="reset_pass" href="#">¿Olvidaste tu contraseña?</a>
                            </div>
                           
                            <div class="clearfix"></div>
                             @Html.ValidationSummary(true, string.Empty,new {@class = "error"})
                            <div class="separator">
                                <div class="clearfix"></div>
                                <br />
                                <div>
                                    <h1><i class="fa fa-paw"></i> SAPAM</h1>
                                    <p>©2017 Todos los Derechos Reservados</p>
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
